<section class="bg-white">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <h2 class="mb-4 text-center text-2xl font-bold text-gray-800 md:mb-8 lg:text-3xl">Create your account</h2>
      <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-xl xl:p-0">
          <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
            <%= form_with(model: @user, local: true) do |form| %>
              <div class="space-y-4 md:space-y-6">
                <div>
                  <%= form.label :name, "Full name", class: "block mb-2 text-sm font-medium text-gray-900" %>
                  <%= form.text_field :name, id: "full-name", class: "bg-gray-35 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5", required: true %>
                </div>
                <div>
                  <%= form.label :email, "Your email", class: "block mb-2 text-sm font-medium text-gray-900" %>
                  <%= form.email_field :email, id: "email", class: "bg-gray-35 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5", required: true %>
                </div>
                <div>
                  <%= form.label :password, "Password", class: "block mb-2 text-sm font-medium text-gray-900" %>
                  <%= form.password_field :password, id: "password", class: "bg-gray-35 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5", required: true %>
                </div>
                <div>
                    <%= form.label :password_confirmation, "Confirm password", class: "block mb-2 text-sm font-medium text-gray-900" %>
                    <%= form.password_field :password_confirmation, id: "confirm-password", class: "bg-gray-35 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5", required: true %>
                </div>
                  <div class="flex items-start">
                      <div class="flex items-center h-5">
                        <!-- Railsのチェックボックスは二つのinputタグを生成するので、視覚的には表示されませんが、name属性が"_destroy"のhiddenフィールドが生成されます -->
                        <%= form.check_box :terms, id: "terms", class: "w-4 h-4 border border-gray-300 rounded bg-white focus:ring-3 focus:ring-primary-300", required: true %>
                      </div>
                      <div class="ml-3 text-sm">
                        <label for="terms" class="font-light text-gray-500">I accept the <%= link_to "Terms and Conditions", '#', class: "font-medium text-primary-600 hover:underline" %></label>
                      </div>
                  </div>
                  <div>
                      <%= form.submit "Sign in", class: "flex items-center justify-center w-full px-10 py-4 text-base font-medium text-center text-white transition duration-500 ease-in-out transform bg-blue-600 rounded-xl hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
                  </div>
                  <p class="text-sm font-light text-gray-500">
                      Already have an account? <%= link_to "Login here", '#', class: "font-medium text-primary-600 hover:underline" %>
                  </p>
            <% end %>  
          </div>
      </div>
  </div>
</section>