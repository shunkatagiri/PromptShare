<section class="bg-white">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <h2 class="mb-4 text-center text-2xl font-bold text-gray-800 md:mb-8 lg:text-3xl">User Profile</h2>
    <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-xl xl:p-0">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <div>
          <label class="block mb-2 text-sm font-medium text-gray-900">Name</label>
          <div class="bg-gray-35 border border-gray-300 text-gray-900 sm:text-sm rounded-lg p-2.5">
            <%= @user.name %>
          </div>
        </div>
        <div>
          <label class="block mb-2 text-sm font-medium text-gray-900">Email</label>
          <div class="bg-gray-35 border border-gray-300 text-gray-900 sm:text-sm rounded-lg p-2.5">
            <%= @user.email %>
          </div>
        </div>
        <div class="text-right">
          <%= link_to 'Edit Profile', edit_user_path(@user), class: 'px-10 py-2 font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700' %>
        </div>
      </div>
    </div>
  </div>
</section>
