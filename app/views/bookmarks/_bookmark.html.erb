<%# app/views/bookmarks/_bookmark.html.erb %>
<%= button_to template_bookmarks_path(template), method: :post, class: "inline-flex items-center justify-center font-bold px-4 py-2 hover:bg-gray-100 ml-2 shadow", data: { turbo_frame: dom_id(template, :bookmark) } do %>
  <i class="<%= current_user && template.bookmarked_by?(current_user) ? 'fas fa-bookmark text-blue-500' : 'far fa-bookmark text-black' %>"></i> ブックマーク
<% end %>