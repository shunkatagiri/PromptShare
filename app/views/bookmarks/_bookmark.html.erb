<%# app/views/bookmarks/_bookmark.html.erb %>
<%= button_to template_bookmarks_path(template), method: :post, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 ml-2 rounded", data: { turbo_frame: dom_id(template, :bookmark) } do %>
  <% if template.bookmarked_by?(current_user) %>
    <i class="fas fa-bookmark" style="color: #0355e2;"></i>
  <% else %>
    <i class="far fa-bookmark" style="color: #ffffff;"></i>
  <% end %>
<% end %>
