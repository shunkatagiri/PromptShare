<%# app/views/bookmarks/_unbookmark.html.erb %>
<%= button_to template_bookmark_path(template, bookmark), method: :delete, class:  "inline-flex items-center px-4 py-2  hover:bg-gray-100 text-black font-bold rounded shadow", data: { turbo_frame: dom_id(template, :bookmark) } do %>
  <% if template.bookmarked_by?(current_user) %>
    <i class="fas fa-bookmark text-blue-500"></i> ブックマークを解除
  <% else %>
    <i class="far fa-bookmark text-black"></i> ブックマーク
  <% end %>
<% end %>