    { title: "ダミーテンプレート1", description: "ダミーテンプレート1の説明", category: "カテゴリー1", favorites_count: 10 },
    { title: "ダミーテンプレート2", description: "ダミーテンプレート2の説明", category: "カテゴリー2", favorites_count: 5 }
  ] %>
  <% prompts.each do |prompt| %>
    <div class="bg-white p-4 rounded shadow mb-4">
      <h2 class="text-xl font-bold mb-2"><%= prompt[:title] %></h2>
      <p class="text-gray-700 mb-2"><%= prompt[:description].truncate(100) %></p>
      <p class="text-sm text-gray-600">カテゴリー: <%= prompt[:category] %></p>
      <p class="text-sm text-gray-600">お気に入り数: <%= prompt[:favorites_count] %></p>
    </div>
  <% end %>
</section>




