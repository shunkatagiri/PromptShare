<%# app/views/home/index.html.erb %>

<%#= render 'shared/navbar' %>

<%# ヒーローセクション %>
<section class="bg-blue-200 text-center p-20">
  <h1 class="text-3xl mb-4">プログラミング学習をサポートするプロンプトテンプレート共有プラットフォーム</h1>
  <p class="text-lg">ここでは、あなたの学習を効果的に進めるためのプロンプトを見つけることができます。</p>
</section>

<%# カテゴリ一覧表示%>
<div class="bg-white py-6 sm:py-8 lg:py-12">
  <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
    <!-- text - start -->
    <div class="mb-10 md:mb-16">
      <h2 class="mb-4 text-center text-2xl font-bold text-gray-800 md:mb-6 lg:text-3xl">Category</h2>

      <p class="mx-auto max-w-screen-md text-center text-gray-500 md:text-lg">Let's use the prompt template!</p>
    </div>
    <!-- text - end -->

    <!-- category - card -- start -->
    <div class="flex flex-wrap justify-around space-y-8">
      <% @categories.each do |category| %>
        <%= render 'categories/card', category: category %>
      <% end %>
    </div>
    <!-- category - card -- end -->



<%# テンプレート一覧 %>
<section class="container mx-auto p-4 mt-6">
  <%# ダミーデータ %>
  <% prompts = [
    { title: "ダミーテンプレート1", description: "ダミーテンプレート1の説明", category: "カテゴリー1", favorites_count: 10 },
    { title: "ダミーテンプレート2", description: "ダミーテンプレート2の説明", category: "カテゴリー2", favorites_count: 5 }
  ] %>
  <% prompts.each do |prompt| %>
    <div class="bg-white p-4 rounded shadow mb-4">
      <h2 class="text-xl font-bold mb-2"><%= prompt[:title] %></h2>
      <p class="text-gray-700 mb-2"><%= prompt[:description].truncate(100) %></p>
      <p class="text-sm text-gray-600">カテゴリー: <%= prompt[:category] %></p>
      <p class="text-sm text-gray-600">お気に入り数: <%= prompt[:favorites_count] %></p>
    </div>
  <% end %>
</section>




<%#= render 'shared/footer' %>