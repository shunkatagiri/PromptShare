<section class="flex flex-col h-screen px-6 py-8 bg-white">
  <div class="items-center justify-center mx-auto mb-4 space-y-4">

    <div class="mt-0">
      <h2 class="text-2xl font-semibold my-2">Categories</h2>
      <% Category.all.each do |category| %>
        <%= link_to category.name, templates_path(category_id: category.id), class: "inline-block bg-blue-500 text-white rounded-full px-4 py-2 m-2 transition-colors duration-300 ease-in-out hover:bg-blue-600" %>
      <% end %>
    </div>

    <h2 class="mt-10 text-center text-2xl font-bold text-gray-800 md:mb-8 lg:text-3xl">Templates</h2>
    <% if @category %>
      <h2 class="text-2xl font-semibold my-2">Category: <%= @category.name %></h2>
    <% end %>
  </div>

  <div class="overflow-auto">
    <% @templates.each do |template| %>
      <div class="w-full mx-auto bg-white rounded-lg shadow sm:max-w-xl xl:p-0 my-4">
        <div class="p-6 space-y-4 sm:p-8">
          <h3 class="text-xl font-bold"><%= template.title %></h3>
          <p class="mt-2 text-gray-600"><%= template.description %></p>
          <div class="mt-2 copy-target" data-content="<%= template.content %>">
            <p><%= template.content %></p>
            <button class="copy-button">Copy to clipboard</button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
